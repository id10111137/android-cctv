<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <!--Line 1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--button1-->

            <android.support.v7.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                app:cardUseCompatPadding="true"
                android:layout_weight="1"
                app:cardElevation="4dp"
                app:cardCornerRadius="3dp" >

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/panic_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="70px"
                        android:src="@drawable/i2_panic" />

                    <TextView
                        android:id="@+id/textttt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:text="Panic"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                app:cardUseCompatPadding="true"
                android:layout_weight="1"
                app:cardElevation="4dp"
                android:visibility="gone"
                app:cardCornerRadius="3dp" >

                <LinearLayout
                    android:id="@+id/live_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="70px"
                        android:src="@drawable/i_panic" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:text="Live Stream" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!--button 2-->
            <android.support.v7.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                app:cardUseCompatPadding="true"
                android:layout_weight="1"
                app:cardElevation="4dp"
                app:cardCornerRadius="3dp" >

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/security_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="70px"
                        android:src="@drawable/i2_security" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:text="Security" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                app:cardUseCompatPadding="true"
                android:layout_weight="1"
                app:cardElevation="4dp"
                app:cardCornerRadius="3dp" >

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/registrasi_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="70px"

                        android:src="@drawable/i2_user" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:text="User" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!--button1-->

            <android.support.v7.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                app:cardUseCompatPadding="true"
                android:layout_weight="1"
                app:cardElevation="4dp"
                android:visibility="gone"
                android:id="@+id/card_user"
                app:cardCornerRadius="3dp" >

                <LinearLayout
                    android:id="@+id/alarm_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="70px"

                        android:src="@drawable/i2_acount" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:text="User" />
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <!-- put whatever you want -->

        </LinearLayout>
        <!--Line 2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <!--button 3-->

            <android.support.v7.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                app:cardUseCompatPadding="true"
                android:layout_weight="1"
                app:cardElevation="4dp"
                app:cardCornerRadius="3dp" >

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/record_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="70px"
                        android:src="@drawable/i2_log" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="Log" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--button1-->

            <android.support.v7.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                app:cardUseCompatPadding="true"
                android:layout_weight="1"
                app:cardElevation="4dp"
                app:cardCornerRadius="3dp" >

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/registrasi_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="70px"

                        android:src="@drawable/i2_contact" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:text="Contact" />
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <!--button 2-->

            <!--button 3-->
            <android.support.v7.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                app:cardUseCompatPadding="true"
                android:layout_weight="1"
                app:cardElevation="4dp"
                app:cardCornerRadius="3dp" >

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/log_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="70px"
                        android:src="@drawable/i2_logout" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:text="Log Out" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- put whatever you want -->

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>