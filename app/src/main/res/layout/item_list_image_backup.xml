<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:layout_marginTop="13dp"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:id="@+id/item_check"
            android:visibility="gone"
            />
        <ImageView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@color/black"
            android:id="@+id/img_log"
            android:src="@drawable/ic_launcher"
            />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line_desc"
            android:layout_marginTop="7dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 Januari 2018"
                android:drawableLeft="@drawable/ic_date_range_grey_800_24dp"
                android:drawablePadding="10dp"
                android:textSize="18dp"
                android:id="@+id/txttgl"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00"
                android:drawableLeft="@drawable/ic_alarm_grey_800_24dp"
                android:drawablePadding="10dp"
                android:textSize="18dp"
                android:id="@+id/txttime"
                android:textStyle="bold"
                />


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e7e5e5"
        ></LinearLayout>
</LinearLayout>